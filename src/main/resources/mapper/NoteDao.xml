<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuokuor.shiqu.dao.NoteDao">

    <resultMap type="com.kuokuor.shiqu.entity.Note" id="NoteMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="score" column="score" jdbcType="NUMERIC"/>
        <result property="headImg" column="head_img" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NoteMap">
        select id,
               user_id,
               title,
               type,
               content,
               create_time,
               score,
               head_img
        from note
        where id = #{id}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from note
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="score != null">
                and score = #{score}
            </if>
            <if test="headImg != null and headImg != ''">
                and head_img = #{headImg}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into note(user_id, title, type, content, create_time, score, head_img)
        values (#{userId}, #{title}, #{type}, #{content}, #{createTime}, #{score}, #{headImg})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update note
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="headImg != null and headImg != ''">
                head_img = #{headImg},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from note
        where id = #{id}
    </delete>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="NoteMap">
        select
        id,
        user_id,
        title,
        type,
        content,
        create_time,
        score,
        head_img
        from note
        where 1 = 1
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        <if test="orderMode==1">
            order by create_time desc
        </if>
        <if test="orderMode==0">
            order by score desc, create_time desc
        </if>
        limit #{offset}, #{limit}
    </select>

    <!--查询用户的关注的笔记列表-->
    <select id="queryFolloweeNotes" resultMap="NoteMap">
        select
        id,
        user_id,
        title,
        type,
        content,
        create_time,
        score,
        head_img
        from note
        where 1 = 0
        <foreach collection="ids" item="id" separator=",">
            or user_id = #{id}
        </foreach>
        order by create_time desc
        limit #{offset}, #{limit}
    </select>

</mapper>

